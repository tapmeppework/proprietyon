	// "editor.detectIndentation": true,
	// "editor.tabSize": 2,
	// "explorer.fileNesting.enabled": true,
	// "explorer.fileNesting.expand": false,

	// less settings
	"less.compile": {
		"compress": true,
		"sourceMap": true,
		"relativeUrls": false,
		"autoprefixer": "> 5%, last 2 versions, Firefox ESR, not ie <= 11, not dead",
		"ieCompat": false
	},
	"less.format.spaceAroundSelectorSeparator": true,
	"less.lint.duplicateProperties": "warning",
	"less.lint.idSelector": "warning",
	"less.lint.ieHack": "error",
	"less.lint.universalSelector": "warning",
	"less.lint.zeroUnits": "warning",

